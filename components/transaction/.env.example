# TRANSACTION

# DEFAULT local
ENV_NAME=development

# APP
VERSION=v1.48.0
APP_CONTEXT=/transaction/v1
SERVER_PORT=3001
SERVER_ADDRESS=:${SERVER_PORT}

# DB POSTGRESQL PRIMARY AND REPLICA
#DB_HOST=midaz-postgres-primary
#DB_USER=midaz
#DB_NAME=transaction
#DB_PASSWORD=lerian
#DB_PORT=5701
#
