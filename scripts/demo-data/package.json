{
  "name": "midaz-demo-data-generator",
  "version": "0.1.0",
  "description": "Realistic demo data generator for Midaz using Faker.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "small": "ts-node --project tsconfig-ts-node.json src/index.ts --volume small",
    "medium": "ts-node --project tsconfig-ts-node.json src/index.ts --volume medium",
    "large": "ts-node --project tsconfig-ts-node.json src/index.ts --volume large",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "test": "jest --testTimeout=10000 --detectOpenHandles --forceExit --testPathIgnorePatterns=sdk-source",
    "test:watch": "jest --watch --testTimeout=10000 --detectOpenHandles --testPathIgnorePatterns=sdk-source",
    "test:coverage": "jest --coverage --testTimeout=10000 --detectOpenHandles --forceExit --testPathIgnorePatterns=sdk-source",
    "test:unit": "jest tests/unit --testTimeout=10000 --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --testTimeout=30000 --detectOpenHandles --forceExit",
    "test:comprehensive": "jest --config jest.config.comprehensive.js",
    "test:comprehensive:coverage": "jest --config jest.config.comprehensive.js --coverage",
    "test:ci": "jest --config jest.config.comprehensive.js --coverage --ci --runInBand"
  },
  "dependencies": {
    "faker": "^5.5.3",
    "midaz-sdk": "file:sdk-source",
    "yargs": "^17.7.2",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/faker": "^5.5.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.100",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  }
}
